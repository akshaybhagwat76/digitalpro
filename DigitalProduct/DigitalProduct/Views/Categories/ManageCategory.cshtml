@model DigitalProduct.ViewModel.CategoryVM
@{
    ViewBag.Title = "Category";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Category</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Categories")">Product</a>
            </li>
            <li class="active">
                <strong>@ViewBag.PageType</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@ViewBag.PageType Category</h5>
                </div>
                <div class="ibox-content">
                    <form id="myForm" class="m-t" role="form" action="javascript:;">
                        <div class="form-horizontal">
                            @Html.HiddenFor(model => model.Id)
                            <div class="form-group">
                                @Html.LabelFor(model => model.CategoryName, new { @class = "control-label col-md-2 requiredLabel" })
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "required" } })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Status", new { @class = "control-label col-md-2" })
                                <div class="col-md-2">
                                    @Html.CheckBoxFor(m => m.Status, new { @class = "i-checks" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" id="btn-submit" value="Save" class="btn btn-primary" />
                                    <a href="/Categories/Index" class="btn btn-default">Cancel</a>
                                    <label id="lblError" class="inline"></label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Assets/EditCategory")

