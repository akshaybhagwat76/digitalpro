
@{
    ViewBag.Title = "Index";
}

@Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Products</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li class="active">
                <strong>Products</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Products List</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover" id="myTable">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in ViewBag.lstProducts)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>@if (item.IsActive == true)
                                    { @Html.Raw("Active") }
                                    else
                                    { @Html.Raw("DeActive")}</td>
                                    <td>
                                        <a href="/Products/Edit/@item.Id" data-id="@item.Id" class="btn-edit btn btn-primary btn-xs action" data-toggle="tooltip" data-placement="bottom" title="Edit">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a href="javascript:void(0)" data-id="@item.Id" class="btn-delete btn btn-danger btn-xs action" data-toggle="tooltip" data-placement="bottom" title="Delete">
                                            <i class="fa fa-trash-o"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_CommonDeleteModal")
@Scripts.Render("~/Assets/Products")
<script>
    var pageLength=@ViewBag.PageIndex;
    var page = @ViewBag.Page;
</script>

