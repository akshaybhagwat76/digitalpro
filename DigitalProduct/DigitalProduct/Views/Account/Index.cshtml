@model DigitalProduct.ViewModel.UserVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Login</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/font-awesome/css")
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
</head>
<body class="gray-bg">
    <div class="preloader"></div>
    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <h3>Welcome to DigitalProduct</h3>
            <p>Login in. To see it in action.</p>
            <form class="m-t" id="myForm" data-url="@ViewBag.ReturnUrl" role="form" action="javascript:;">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { autocomplete = "off", placeholder = "Email", @class = "form-control required", @type = "email" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { autocomplete = "off", placeholder = "Password", @class = "form-control required" })
                </div>
                <div class="form-group text-left">
                    <input id="RememberMe" type="checkbox" class="i-checks"> Remember me
                </div>
                <button type="button" id="btn-submit" class="btn btn-primary block full-width m-b">Login</button>
                <label id="lblError"></label>
                <a href="/Account/ForgotPassword"><small>Forgot password?</small></a>
                @*<p class="text-muted text-center"><small>Do not have an account?</small></p>
                    <a class="btn btn-sm btn-white btn-block" href="@Url.Action("Register", "Account")">Create an account</a>*@
            </form>
            <hr />
            <p class="m-t"> <small>&copy; @DateTime.Now.Year</small> </p>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/plugins/iCheck")
    @Scripts.Render("~/Assets/Login")
</body>
</html>

